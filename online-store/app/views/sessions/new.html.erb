<h1>Log in to your account:</h1>

<%= form_for(@user, url: login_path) do |f| %>
    <%= f.label :username %> <br>
    <%= f.text_field :username %> <br> <br>
    
    <%= f.label :password %> <br>
    <%= f.password_field :password %> <br><br>

    <%= link_to 'Back', root_path, class: "link back" %>
    <%= f.submit 'Log In', class: :button %>
<% end %>